{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://mokiycodes.github.io/RPM/schema/rpm.schema.json",
  "$comment": "This schema contains the actual JSON description for the contents of a project.",
  "required": [],
  "type": "object",
  "definitions": {
    "packageName": {
      "description": "A package's name",
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "([a-z]|[A-Z]|[0-9]|\\.|\\-|]\\_)*",
      "default": "Some.Package"
    }
  },
  "properties": {
    "name": {
      "$ref": "#/definitions/packageName",
      "description": "The name of the package"
    }
  }
}

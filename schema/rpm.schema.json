{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://mokiycodes.github.io/RPM/schema/rpm.schema.json",
  "$comment": "This schema contains the actual JSON description for the contents of a project. cache=97vy9o8j.wv7",
  "type": "object",
  "definitions": {
    "packageName": {
      "description": "A package's name",
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "([a-z]|[A-Z]|[0-9]|\\.|-|_)*",
      "default": "Some.Package"
    },
    "dependencies": {
      "description": "Dependencies",
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "description": "The package version"
      }
    }
  },
  "properties": {
    "name": {
      "description": "A package's name",
      "$ref": "#/definitions/dependencies"
    }
  },
  "required": ["name"]
}
